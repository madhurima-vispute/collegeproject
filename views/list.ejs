<body>
    <%- include('template\\header.ejs') %>

    <section class="container-fluid bg-white">
        <div class="productList py-5 d-flex justify-content-around">
            <div class="row row-cols-1 row-cols-md-4 g-3">


              <% product.forEach(function(product,i){ %>
                <% var url = "/Product?id=" + product.id %> 
              <div class="col">
                <div class="card rounded-0">
                  <img src=<%= product.img_1 %> class="card-img-top d-block w-100" height="360px">
                  <div class="card-body">
                    <p class="card-text"><%= product.b_name %></p>
                    <h5 class="card-title"><%= product.p_name %></h5>
                    <p class="card-text">â‚¹<%= product.price %></p>
                    
                    <a href=<%= url %> class="btn btn-outline-dark d-grid mx-auto">More Details</a>
                  
                  </div>
                </div>
              </div>



            <% }) %>

            

            </div>
          </div>

    </section>


    <%- include('template\\footer.ejs') %>
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
