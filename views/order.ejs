<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>

    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

    <link rel="stylesheet" href="css\styles.css">

</head>
<body>

    <%- include('template\\header.ejs') %>

    <div class="account-page">

      <div class="account-content">
          <h1> Hello, <%= name %> </h1>
          <p><a href="">Sign Out</a> | <a href="http://localhost:8080/contact">Need Assistance?</a></p>
      </div> 

  </div>

  <div class="account-nav bg-body-tertiary">
        <ul class="nav justify-content-center">
          <li class="nav-item">
            <a class="nav-link active" aria-current="page" href="http://localhost:8080/my-account">Overview</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="http://localhost:8080/detail">Account</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" id="orders" href="http://localhost:8080/order">Orders</a>
          </li>
        </ul>
      </div>

<div class="pt-5 bg-white px-5">
    <table class="table table-hover pt-5">
        <thead>
          <tr>
            <th scope="col">sr.no</th>
            <th scope="col">Product</th>
            <th scope="col">Quantity</th>
            <th scope="col">Status</th>
          </tr>
        </thead>
        <tbody>

            <% order.forEach(function(order,i){ %>

            
          <tr>
            <th scope="row"><%= i+1 %></th>
            <td><%= product[order.product_id].p_name %></td>
            <td><%= order.qty %></td>
            <td><%= order.status %></td>

          </tr>

          <% }) %>
        </tbody>
      </table>


    </div>
      <%- include('template\\footer.ejs') %>


</body>
</html>